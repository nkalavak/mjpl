<!-- This file describes a scene with the franka panda arm as well as a table with blocks on it-->

<mujoco model="panda scene with obstacles">
  <compiler angle="radian" autolimits="true"/>
  <include file="panda.xml"/>

  <statistic center="0.3 0 0.4" extent="1"/>

  <visual>
    <headlight diffuse="0.6 0.6 0.6" ambient="0.3 0.3 0.3" specular="0 0 0"/>
    <rgba haze="0.15 0.25 0.35 1"/>
    <global azimuth="120" elevation="-20"/>
  </visual>

  <asset>
    <texture type="skybox" builtin="gradient" rgb1="0.3 0.5 0.7" rgb2="0 0 0" width="512" height="3072"/>
    <texture type="2d" name="groundplane" builtin="checker" mark="edge" rgb1="0.2 0.3 0.4" rgb2="0.1 0.2 0.3"
      markrgb="0.8 0.8 0.8" width="300" height="300"/>
    <material name="groundplane" texture="groundplane" texuniform="true" texrepeat="5 5" reflectance="0.2"/>

    <!-- Table material -->
    <texture type="2d" name="wood" builtin="flat" rgb1="0.8 0.6 0.4" width="256" height="256"/>
    <material name="table_material" texture="wood" rgba="0.8 0.6 0.4 1" reflectance="0.1"/>
    
    <!-- Block materials -->
    <material name="block_red" rgba="0.8 0.2 0.2 1" reflectance="0.1"/>
    <material name="block_blue" rgba="0.2 0.2 0.8 1" reflectance="0.1"/>
    <material name="block_green" rgba="0.2 0.8 0.2 1" reflectance="0.1"/>
    <material name="block_yellow" rgba="0.8 0.8 0.2 1" reflectance="0.1"/>
  </asset>

  <worldbody>
    <light pos="0 0 1.5" dir="0 0 -1" directional="true"/>
    <geom name="floor" size="0 0 0.05" type="plane" material="groundplane"/>

    <!-- Table -->
    <body name="table" pos="0.5 0 0">
      <!-- Table top -->
      <geom name="table_top" type="box" size="0.4 0.3 0.02" pos="0 0 0.4" material="table_material" 
            friction="1 0.1 0.001" condim="3"/>
      
      <!-- Table legs -->
      <geom name="table_leg1" type="box" size="0.02 0.02 0.19" pos="0.35 0.25 0.19" material="table_material"/>
      <geom name="table_leg2" type="box" size="0.02 0.02 0.19" pos="0.35 -0.25 0.19" material="table_material"/>
      <geom name="table_leg3" type="box" size="0.02 0.02 0.19" pos="-0.35 0.25 0.19" material="table_material"/>
      <geom name="table_leg4" type="box" size="0.02 0.02 0.19" pos="-0.35 -0.25 0.19" material="table_material"/>
    </body>

    <!-- mocap="true" for kinematic control (no physics) -->
    <body name="block_red" pos="0.3 0.1 0.44">
      <freejoint name="block_red_free"/>
      <geom name="red_block" type="box" size="0.012 0.012 0.012" material="block_red"
            friction="1 1 1" condim="3" contype="2" conaffinity="1" solref="0.01 1"/>
      <inertial pos="0 0 0" mass="0.1" diaginertia="0.001 0.001 0.001"/>
    </body>

    <body name="block_blue" pos="0.4 -0.1 0.44">
      <freejoint name="block_blue_free"/>
      <geom name="blue_block" type="box" size="0.03 0.02 0.02" material="block_blue"
            friction="1 0.03 0.003" condim="3" contype="2" conaffinity="1" solref="0.01 1"/>
      <inertial pos="0 0 0" mass="0.15" diaginertia="0.001 0.001 0.001"/>
    </body>

    <body name="block_green" pos="0.6 0.05 0.44">
      <freejoint name="block_green_free"/>
      <geom name="green_block" type="box" size="0.02 0.03 0.03" material="block_green"
            friction="1 0.03 0.003" condim="3" contype="2" conaffinity="1" solref="0.01 1"/>
      <inertial pos="0 0 0" mass="0.12" diaginertia="0.001 0.001 0.001"/>
    </body>

    <body name="block_yellow" pos="0.5 0.15 0.44">
      <freejoint name="block_yellow_free"/>
      <geom name="yellow_block" type="box" size="0.02 0.02 0.04" material="block_yellow"
            friction="1 0.03 0.003" condim="3" contype="2" conaffinity="1" solref="0.01 1"/>
      <inertial pos="0 0 0" mass="0.08" diaginertia="0.001 0.001 0.001"/>
    </body>
  </worldbody>

  <!-- Weld constraints for grasping
  <equality>
    <weld name="grasp_red" body1="block_red" body2="hand" active="false" solref="0.02 1"/>
    <weld name="grasp_blue" body1="block_blue" body2="hand" active="false" solref="0.02 1"/>
    <weld name="grasp_green" body1="block_green" body2="hand" active="false" solref="0.02 1"/>
    <weld name="grasp_yellow" body1="block_yellow" body2="hand" active="false" solref="0.02 1"/>
  </equality>
  -->

</mujoco>